<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.bloodgram">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bloodgram">
        <activity
            android:name=".ui.activity.mainactivities.ShowDetails"
            android:exported="false" />
        <activity
            android:name=".ui.activity.mainactivities.YourPosts"
            android:exported="false" />
        <activity
            android:name=".ui.activity.startup.SelectStateCity"
            android:exported="false" />
        <activity android:name=".ui.activity.login.UserInfoWindow" />
        <activity android:name=".ui.activity.login.ForgotPasswordWindow" />
        <activity android:name=".ui.activity.login.SignUpWindow" />
        <activity android:name=".ui.activity.login.LoginWindow"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.startup.SplashScreen" />
        <activity android:name=".ui.activity.startup.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>